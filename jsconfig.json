{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./build",
      "esModuleInterop": false,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "strict": true,
      "skipLibCheck": true
    },
    
    "exclude": ["node_modules"],
    "include": ["src/**/*", "tests/**/*.js"],
  }